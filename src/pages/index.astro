---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla Clone">
    <header
        class="text-white py-[10px] px-12 pr-4 flex justify-between items-center fixed top-0 w-full font-medium z-40"
    >
        <div class="flex flex-grow basis-0">
            <svg
                class="h-5 w-[120px]"
                viewBox="0 0 342 35"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                    d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z"
                    fill="currentColor"
                >
                </path>
            </svg>
        </div>

        <nav class="mr-4">
            <ul
                class="flex text-sm [&>li>a]:inline-block [&>li>a]:py-2 [&>li>a]:px-4"
            >
                <li><a href="#">Model S</a></li>
                <li><a href="#">Model 3</a></li>
                <li><a href="#">Model X</a></li>
                <li><a href="#">Model Y</a></li>
                <li><a href="#">Powerwall</a></li>
                <li><a href="#">Carga</a></li>
            </ul>
        </nav>

        <nav class="flex flex-grow basis-0 justify-end pr-0">
            <ul
                class="flex text-sm [&>li>a]:inline-block [&>li>a]:py-2 [&>li>a]:px-4"
            >
                <li><a href="#">Soporte</a></li>
                <li><a href="#">Tienda</a></li>
                <li><a href="#">Cuenta</a></li>
                <li><a href="#">Menú</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="h-screen w-screen text-center relative overflow-hidden">

            <div class="z-30 relative flex flex-col h-full">
                <header class="">
                    <h2 class="text-white pt-[150px] text-[40px] font-medium">Disfrute de Tesla</h2>
                    <p class="text-white text-[14px]">Programe una prueba de conducción hoy mismo</p>
                </header>
    
                <footer class="flex-col flex flex-grow justify-end pb-[80px]">
                    <div><a class="text-white text-[14px] font-medium border-[3px] rounded px-12 py-[6px] inline-block" href="#">Prueba de conducción</a></div>
                </footer>
            </div>

            <div class="absolute top-0 bottom-0 h-full w-full z-10">
                <video class="object-center object-cover h-full w-full" autoplay muted loop src="video.webm"></video>
            </div>

        </section>
    </main>
</Layout>
